extends ../../layouts/default.pug 

block main  
    if(role.title)
        h1(class="mb-4") #{role.title}

   
    if(role.position)
        div(class="mb-4") Vị trí: <b>#{role.position}</b>
    if(role.description)
        div(class="mb-4") !{role.description}
    
    a(
        href=`${prefixAdmin}/roles/edit/${role.id}`
        class="btn btn-warning btn-sm",
    ) Chỉnh sửa

    script(src="/admin/js/product.js")